{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style> 
    .posts {
        border-radius: 10px;
        box-shadow:0 10px 16px rgba(0,0,0,25);
        margin-bottom:40px;
        margin-top:40px;
        padding: 40px;
        }
        img {
            border-radius:10px;
           }
</style>
{% for post in posts %}
            
    <section class="posts">
        <h2> {{post.title}} </h2>
            <article>
                <div class="metadata"> 
                   <p> {{post.createdAt | date('Y-m-d')}} at {{post.createdAt | date('H:i')}} </p>
                    <span class="badge bg-success"> Sport </span>
                </div>
                <div class="content"> 
                    <img src="{{post.imageSource}}" class="mt-3 mb-3">
                    <p> {{post.content}} </p>
                       <a href="#"> Read More </a>
                    </img>
                </div>

            </article>
    </section>

{% endfor %}


{% endblock %}
